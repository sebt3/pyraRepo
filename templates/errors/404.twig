{% extends "core.twig" %}
{% block title %}404 {{ _('not found') }}{% endblock %}
{% block contentHeader %}
        404
        <small>{{ _('not found') }}</small>
{% endblock %}
{% block content %}
    <section class="content">
      <div class="error-page">
        <h2 class="headline text-yellow"> 404</h2>

        <div class="error-content">
          <h3><i class="fa fa-warning text-yellow"></i> {{ _('Oops! Page not found.') }}</h3>

          <p>
            {{ _('We could not find the page you were looking for. Meanwhile, you may') }} <a href="{{ path_for('home') }}">{{ _('return home') }}</a>.
          </p>
        </div>
      </div>
    </section>

{% endblock %}
