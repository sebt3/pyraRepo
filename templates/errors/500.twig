{% extends "core.twig" %}
{% block title %}500 {{ _('server error') }}{% endblock %}
{% block contentHeader %}
        500
        <small>{{ _('Server error') }}</small>
{% endblock %}
{% block content %}
    <section class="content">
      <div class="error-page">
        <h2 class="headline text-red"> 500</h2>
        <div class="error-content">
          <h3><i class="fa fa-bug text-red"></i> {{ _('Oops! Server error') }}
          <p>
            {{ _('The server encontered an error. Meanwhile, you may') }} <a href="{{ path_for('home') }}">{{ _('return home') }}</a>.
          </p>
<p>
  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseError" aria-expanded="false" aria-controls="collapseError">
    {{ _('Details') }}
  </button>
</p>
        </div>
      </div>
      <div class="error-details">
<div class="collapse" id="collapseError">
  <div class="card card-block">
	{% for e in excepts %}
	<table><tr><th>Type:</th><td>{{ e.type }}</td></tr>
	<tr><th>Code:</th><td>{{ e.code }}</td></tr>
	<tr><th>Message: </th><td>{{ e.msg }}</td></tr>
	<tr><th>File:</th><td>{{ e.file }}</td></tr>
	<tr><th>line:</th><td>{{ e.line }}</td></tr></table>
	<p><strong>Trace:</strong><pre>{{ e.trace }}</pre></p>
	{% endfor %}
  </div>
</div>
    </section>

{% endblock %}

